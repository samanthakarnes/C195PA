<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginScreenController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label fx:id="loginMessageLabel" alignment="CENTER" text="Hello! You're logging in from" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="locationField" text="location">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="usernameLabel" text="Username:">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <padding>
                  <Insets right="300.0" />
               </padding>
            </Label>
            <TextField fx:id="usernameTextBox" promptText="Enter your username...">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="175.0" right="175.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="passwordFieldLabel" text="Password:">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets right="300.0" />
               </padding>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter your password...">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="175.0" right="175.0" top="5.0" />
               </VBox.margin>
            </PasswordField>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClicked" text="Login" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets left="300.0" top="25.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onExitButtonClicked" text="Exit">
               <VBox.margin>
                  <Insets left="300.0" top="15.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
